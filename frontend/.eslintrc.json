{
  "env": {
    "browser": true,
    "es2021": true
  },
  "plugins": ["react", "prettier"],
  "extends": ["airbnb", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": ["*.test.js"],

  "rules": {
    "prettier/prettier": "error",
    "react/prop-types": 0,
    "react/jsx-filename-extension": 0,
    "no-unused-vars": [
      "error",
      {
        "args": "none"
      }
    ]
  }
}
